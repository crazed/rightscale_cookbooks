server {
  listen        80 default;
  server_name   <%= @server_name %>;
  rewrite       ^(.*)$ https://$host/$1 permanent;
}

server {
  listen                443;
  server_name           <%= @server_name %>;
  ssl                   on;
  ssl_certificate       /etc/nginx/ssl/cert.pem; 
  ssl_certificate_key   /etc/nginx/ssl/key.pem;
  root                  <%= @document_root %>;

  try_files /maintenance.html @haproxy;

  location @haproxy {
    proxy_pass http://haproxy
  }
}
